{
  "extends": "./base.json",
  "compilerOptions": {
    "outDir": "${configDir}/dist",
    // https://github.com/tsconfig/bases/blob/main/bases/node24.json
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "moduleResolution": "node16",
    "noEmit": false
  }
}
